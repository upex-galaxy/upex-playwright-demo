{
  "name": "playwright-ts",
  "version": "18",
  "description": "playwright project with typescript and azure devops integration",
  "main": "index.js",
  "scripts": {
    "pw:install": "npx playwright install --with-deps chromium",
    "test:plan": "npx playwright test --reporter=list --project=chromium --list",
    "test:ui": "npx playwright test --ui",
    "test:trace": "npx playwright show-trace",
    "test:debug": "npx playwright test --project=chromium --debug",
    "test": "npx playwright test --project=chromium",
    "ci:test": "npx playwright test -c playwright.chrome.config.ts --project=chromium",
    "regression:chrome": "npx playwright test -c playwright.chrome.config.ts --project=chromium",
    "ci:regression": "npx playwright test -c playwright.chrome.config.ts --project=chromium --workers=4",
    "ci:smoke": "npx playwright test -c playwright.chrome.config.ts --project=chromium tests/specs/example/spacebeyond/checkout/checkout.test.ts",
    "show:report:chrome": "npx playwright show-report test-html-report/chrome",
    "clean:reports": "rm -rf test-results && rm -rf test-junit-report && rm -rf test-html-report && rm -rf allure-results",
    "allure:open": "allure generate --clean",
    "allure:gen:chrome": "allure generate --clean -o allure-report/chrome",
    "allure:report": "npm run allure:open && allure open --host localhost --port 7070",
    "prettier:check": "npx prettier --check tests/**/*.ts",
    "prettier:fix": "npx prettier --write tests/**/*.ts",
    "eslint:check": "npx eslint tests/**/*.ts",
    "eslint:fix": "npx eslint --fix tests/**/*.ts",
	"check:ts": "tsc --noEmit"
  },
  "keywords": [
    "playwright"
  ],
  "author": "upex",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@alex_neo/playwright-azure-reporter": "1.8.0",
    "@faker-js/faker": "8.4.1",
    "@playwright/test": "1.41.2",
    "@types/lodash": "4.14.202",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "6.11.0",
    "@typescript-eslint/parser": "6.11.0",
    "allure-commandline": "2.24.1",
    "allure-playwright": "2.9.2",
    "dotenv": "16.0.3",
    "eslint": "8.53.0",
    "eslint-plugin-only-warn": "1.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "lodash": "4.17.21",
    "prettier": "3.1.0",
    "typescript": "5.2.2"
  }
}
